<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_index"
        android:contentDescription="@string/app_name" />


    <LinearLayout
        android:id="@+id/home_lo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="110dp"
        android:orientation="vertical" >
        
        <LinearLayout
	        android:id="@+id/main_ll1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <ImageView
	            android:id="@+id/icon_wine"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_wine" />
	
	        <ImageView
	            android:id="@+id/sp_line1"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|fill"
	            android:layout_weight="0.1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/spv" />
	        
	
	        <ImageView
	            android:id="@+id/icon_cellar"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_cellar" />
	
	    </LinearLayout>	 
	    <LinearLayout
	        android:id="@+id/main_line1"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" >
	
	        <View
	            android:id="@+id/main_space1"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />

	        <ImageView
	            android:id="@+id/sp_lineA"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="center"
	            android:layout_weight="1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/sph" />
	        
	        <View
	            android:id="@+id/main_space2"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />
	        
	        <ImageView
	            android:id="@+id/sp_lineB"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="center"
	            android:layout_weight="1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/sph" />
	
	        <View
	            android:id="@+id/main_space3"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />
	
	    </LinearLayout>
	    
	    
	    <LinearLayout
	        android:id="@+id/main_ll2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <ImageView
	            android:id="@+id/icon_food"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_food" />
	        
	        <ImageView
	            android:id="@+id/sp_line2"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|fill"
	            android:layout_weight="0.1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/spv" />
	
	
	        <ImageView
	            android:id="@+id/icon_events"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_events" />
	
	    </LinearLayout>
	    
	    <LinearLayout
	        android:id="@+id/main_line2"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:orientation="horizontal" >
	
	        <View
	            android:id="@+id/main_space4"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />
	
	        <ImageView
	            android:id="@+id/sp_lineC"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|fill"
	            android:layout_weight="1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/sph" />
	        
	        <View
	            android:id="@+id/main_space5"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />
	        
	        <ImageView
	            android:id="@+id/sp_lineD"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:layout_gravity="top|fill"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/sph" />
	
	        <View
	            android:id="@+id/main_space6"
	            android:layout_width="wrap_content"
	            android:layout_height="2dp"
	            android:layout_weight="1.3" />
	
	    </LinearLayout>
	    
	    
	    <LinearLayout
	        android:id="@+id/main_ll3"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	
		
	        <ImageView
	            android:id="@+id/icon_location"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_location" />
	        
	        <ImageView
	            android:id="@+id/sp_line3"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|fill"
	            android:layout_weight="0.1"
	            android:adjustViewBounds="true"
	            android:contentDescription="@string/app_name"
	            android:cropToPadding="true"
	            android:src="@drawable/spv" />
	        
	        <ImageView
	            android:id="@+id/icon_inbox"
	            android:layout_width="0dp"
	            android:layout_height="fill_parent"
	            android:layout_weight="1"
	            android:contentDescription="@string/app_name"
	            android:src="@drawable/icon_inbox" />
	
	    </LinearLayout>
	    
	    
</LinearLayout>

<LinearLayout
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:orientation="horizontal" >

    <ImageView
        android:id="@+id/icon_aboutus"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/aboutus_button"
        android:contentDescription="@string/app_name"
        android:visibility="visible" />

</LinearLayout>
    
</RelativeLayout>