<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lv_winetab"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fadingEdge="none"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/title_food"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/DarkRed"
        android:contentDescription="@string/app_name"
        android:src="@drawable/title_food" />

    <LinearLayout 
         android:background="@drawable/bg_food_menu_title"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginBottom="-1dp"
         android:orientation="horizontal">
         <ImageView 
            android:id="@+id/title_dish_img"
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@string/app_name"
	        />
	    <TextView
	        android:id="@+id/title_dish_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:paddingLeft="10sp"
	        android:text="@string/app_name"
	        android:textAppearance="?android:attr/textAppearanceLarge"
	        android:textColor="@color/Maroon"
	        android:textSize="18sp"
	        android:textStyle="bold" />
	</LinearLayout>
    <ListView
        android:id="@+id/list_food_dish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000" />

</LinearLayout>