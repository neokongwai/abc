<?xml version="1.0" encoding="utf-8"?>  
<LinearLayout   
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:paddingTop="13dp"
    android:paddingBottom="13dp"   
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@drawable/bg_cellar_list" >

    <ImageView 
         android:id="@+id/cellarWineImage"  
         android:layout_height="68dp"   
         android:layout_width="68dp"
     />    
    <View  android:layout_height="1dp"   
         android:layout_width="10dp"/>
    
    <LinearLayout  
        android:orientation="vertical"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1" >
        
        <TextView 
            android:id="@+id/cellarWineName"  
            android:layout_height="wrap_content"   
            android:layout_width="wrap_content"
            android:textStyle="bold"
	        android:textColor="@color/Maroon"
            android:ellipsize="end"
            android:maxLines="1"/> 
            
       <LinearLayout  
        android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   >
        
	        <TextView   
	            android:layout_height="wrap_content"   
	            android:layout_width="wrap_content"
	            android:textStyle="bold"
	            android:text="Rating: " />
	        <ImageView 
	         android:id="@+id/cellarWineImage_0"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />
	        <View  android:layout_height="1dp"   
         		   android:layout_width="5dp"/>
            <ImageView 
	         android:id="@+id/cellarWineImage_1"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />
            <View  android:layout_height="1dp"   
         		   android:layout_width="5dp"/>
            
            <ImageView 
	         android:id="@+id/cellarWineImage_2"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />
            <View  android:layout_height="1dp"   
         		   android:layout_width="5dp"/>
            
            <ImageView 
	         android:id="@+id/cellarWineImage_3"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />
            <View  android:layout_height="1dp"   
         		   android:layout_width="5dp"/>
            
            <ImageView 
	         android:id="@+id/cellarWineImage_4"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />
            <View  android:layout_height="1dp"   
         		   android:layout_width="5dp"/>
            
            <ImageView 
	         android:id="@+id/cellarWineImage_5"  
	         android:layout_height="wrap_content"   
	         android:layout_width="wrap_content"
	         android:background="@drawable/icon_wine_glass" />  
       </LinearLayout>
    
    	<LinearLayout  
	        android:orientation="horizontal"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		>
	       	<TextView   
	            android:layout_height="wrap_content"   
	            android:layout_width="wrap_content"
	            android:textStyle="bold"
	            android:text="Status: " />
	       	<TextView  
	            android:id="@+id/cellarWineStatus" 
	            android:layout_height="wrap_content"   
	            android:layout_width="wrap_content" />  
        </LinearLayout>
    </LinearLayout>

    <ImageView 
         android:layout_height="wrap_content"   
         android:layout_width="wrap_content"
         android:layout_gravity="center_vertical"
         android:background="@drawable/arrow_right" />

    
</LinearLayout>  