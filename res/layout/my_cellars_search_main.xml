<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
	    android:layout_height="wrap_content">
	    <ImageView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:src="@drawable/title_search" />
	    
	  <!--    <ImageButton
	        android:id="@+id/cellar_back_button"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="5dip"
	        android:background="@drawable/btn_back" />
       -->
	    
    </RelativeLayout>
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/bg_menu"
        android:padding="4dip" >

        <EditText
            android:id="@+id/cellar_search_text"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@android:drawable/editbox_background"
            android:contentDescription="@string/app_name"
            android:hint="@string/search_hint"
            android:imeActionLabel="Search"
            android:imeOptions="actionSearch"
            android:singleLine="true"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/cellar_search_name_btn"
            android:layout_width="40dip"
            android:layout_height="40dip"
             android:layout_gravity="center_vertical"
            android:src="@drawable/btn_search_small" />
    </LinearLayout>

    <ScrollView 
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:paddingTop="13dp"   
	    android:paddingLeft="15dp"
	    android:paddingRight="15dp"
	    android:layout_weight="1">
        
        <LinearLayout 
            android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="vertical"
            >
        
	        <TextView 
	            android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="Enter wine description above"
	         />
	        <RelativeLayout
	            android:id="@+id/cellar_search_region" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_region_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:id="@+id/cellar_search_vintage" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_vintage_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:id="@+id/cellar_search_grape" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_grape_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	        <RelativeLayout
	            android:id="@+id/cellar_search_colour" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_colour_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	         <RelativeLayout
	            android:id="@+id/cellar_search_body" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_body_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	          <RelativeLayout
	            android:id="@+id/cellar_search_sweetness" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_sweetness_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	         
	          <RelativeLayout
	            android:id="@+id/cellar_search_size" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_size_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	        
	           <RelativeLayout
	            android:id="@+id/cellar_search_price" 
	             android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="5dip"
		        android:paddingLeft="5dp"
		        android:background="@drawable/bg_drop_down_menu"
	            >
		       
		        
		        <TextView
		            android:id="@+id/cellar_search_price_text"  
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_centerVertical="true"
		         />
	        </RelativeLayout>
	    
	           <LinearLayout 
	               android:orientation="horizontal"
	               android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:layout_marginTop="5dip"
		        	android:layout_gravity="center_horizontal"
	               >
	               <ImageButton 
	                   android:id="@+id/cellar_search_btn"
	                    android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:layout_marginRight="5dip"
		        		android:background="@drawable/btn_search"
	                   />
	               
	                <ImageButton 
	                   android:id="@+id/cellar_reset_btn"
	                    android:layout_width="wrap_content"
		        		android:layout_height="wrap_content"
		        		android:background="@drawable/btn_reset"
	                   />
	               
	           </LinearLayout>
        </LinearLayout>       
    </ScrollView>
    <RelativeLayout 
        android:id="@+id/cellar_search_wheel_layout"
        android:layout_height="0dip"
		android:layout_width="fill_parent"
		android:visibility="gone"
		android:layout_weight="1"
	>
		<kankan.wheel.widget.WheelView 
	  		android:id="@+id/cellar_search_wheel"
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
		
		/>
		<ImageView 
		    android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:background="@drawable/picker_view"
		    />
	</RelativeLayout>
</LinearLayout>